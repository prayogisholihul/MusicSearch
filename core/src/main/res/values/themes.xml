<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MusicSearch" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/purple40</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/purple_grey40</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorTertiary">@color/pink40</item>
        <item name="colorOnBackground">@color/white_20</item>
        <item name="colorSurface">@color/white_20</item>
    </style>

    <style name="Theme.MusicSearch" parent="Base.Theme.MusicSearch" />

    <style name="toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary" tools:keep="@style/toolbar">
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="circleImageView" parent="" tools:keep="@style/circleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>